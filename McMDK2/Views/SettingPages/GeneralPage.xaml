<UserControl x:Class="McMDK2.Views.SettingPages.GeneralPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:ei="http://schemas.microsoft.com/expression/2010/interactions"
        xmlns:l="http://schemas.livet-mvvm.net/2011/wpf"
        xmlns:v="clr-namespace:McMDK2.Views.SettingPages"
        xmlns:vm="clr-namespace:McMDK2.ViewModels.SettingPages">
    
    <UserControl.DataContext>
        <vm:GeneralPageViewModel />
    </UserControl.DataContext>
    
    <i:Interaction.Triggers>
    </i:Interaction.Triggers>
    
    <Grid>
        <TextBlock Margin="10,10,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"
                   Text="ニュースフィード表示数" FontSize="14" />
        <TextBox Margin="200,8,10,0" VerticalAlignment="Top" 
                 Height="20"
                 Text="{Binding FeedsCount}"/>
        
        <TextBlock Margin="10,40,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"
                   Text="最近開いたプロジェクトの保存数" FontSize="14" />
        <TextBox Margin="200,38,10,0" VerticalAlignment="Top"
                 Height="20"
                 Text="{Binding RecentProjectsCount}" />

        <CheckBox Margin="15,70,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"
                  Content="通信時にキャッシュを使用する" FontSize="14"
                  ToolTip="通信時にキャッシュを使用することによって、同一の内容の通信を短縮することができ、高速化が期待できます。"
                  IsChecked="{Binding IsUseInternetCache}" />


        <CheckBox Margin="15,100,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"
                  ToolTip="ファイルキャッシュを使用することによって、ファイル処理を高速化させることが期待できます。"
                  Content="ファイルキャッシュを使用する" FontSize="14"
                  IsChecked="{Binding IsUseFileCache}"/>
        
        <CheckBox Margin="15,130,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"
                  Content="自動更新を行う" FontSize="14"
                  IsChecked="{Binding EnableAutoUpdate}"/>
    </Grid>
</UserControl>
